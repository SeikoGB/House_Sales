<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/mini_product_card"
    android:layout_height="120dp"
    android:layout_margin="15dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mini_product_image"
        android:layout_width="90dp"
        android:visibility="visible"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/hotel2">


    </ImageView>

    <TextView
        android:id="@+id/mini_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="$35"
        android:textColor="@color/teal_200"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.616" />

    <TextView
        android:id="@+id/mini_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Street da Umaurie"
        android:textColor="#000000"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/mini_product_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mini_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:text="Paris,France"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/mini_product_image"
        app:layout_constraintStart_toStartOf="@+id/mini_product_name"
        app:layout_constraintTop_toBottomOf="@+id/mini_product_name" />

    <TextView
        android:id="@+id/mini_product_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/baseline_star_24"
        android:text="4.8"
        android:textSize="17dp"
        app:layout_constraintStart_toEndOf="@+id/mini_product_image"
        app:layout_constraintStart_toStartOf="@+id/mini_brand_name"
        app:layout_constraintTop_toBottomOf="@+id/mini_brand_name" />

    <TextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mini_product_image"
        app:layout_constraintStart_toStartOf="@+id/mini_brand_name"
        app:layout_constraintTop_toBottomOf="@+id/mini_brand_name" />




</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>